@model IEnumerable<projetoMarket.Models.Categoria>

@{
    Layout = "_LayoutAdmin";
}
<h2>Categorias</h2>
<hr/>
<a asp-action="NovaCategoria" asp-controller="Gestao" class="btn btn-success">Criar nova Categoria</a>
<hr/>

<script>
    $(document).ready( function () {
        $('#categorias').DataTable();
    } );
</script>

<table id="categorias" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>Nome</th>
            <th>Ações</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var categoria in Model){
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                    <a class="btn btn-primary" href="/Gestao/EditarCategoria/@categoria.Id">Editar</a>

                    <form style="display: inline;" asp-action="Deletar" asp-controller="Categorias">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
