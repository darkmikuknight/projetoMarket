@model projetoMarket.DTO.PromocaoDTO

@{
    Layout = "_LayoutAdmin";
}

<h2>Nova Promoção</h2>
<hr/>

<form method="POST" asp-controller="Promocoes" asp-action="Salvar" class="form-horizontal">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="ProdutoID">Nome da Promoção</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Promoção"><br>
    <span asp-validation-for="Nome"></span>

    <label asp-for="ProdutoID">Nome Produto</label>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Produtos, "Id", "Nome"))'></select><br>
    <span asp-validation-for="ProdutoID"></span>

    <label asp-for="Porcentagem">Porcentagem</label>
    <input type="number" min="0" max="100" asp-for="Porcentagem" placeholder="10" class="form-control"><br>
    <span asp-validation-for="Porcentagem"></span>
    
    <button class="btn btn-success">Cadastrar</button>
</form>
