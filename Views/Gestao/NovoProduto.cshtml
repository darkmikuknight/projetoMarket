@model projetoMarket.DTO.ProdutoDTO

@{
    Layout = "_LayoutAdmin";
}
<h3>Novo Produto</h3>
<hr/>
<form class="form-horizontal" asp-controller="Produtos" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do Produto">
    <span asp-validation-for="Nome"></span>

    <br/>
    <label asp-for="CategoriaID">Categoria</label>
    <select class="form-control" asp-for="CategoriaID" asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Nome"))'></select>

    <br/>
    <label asp-for="FornecedorID">Fornecedor</label>
    <select class="form-control" asp-for="FornecedorID" asp-items='@(new SelectList(@ViewBag.Fornecedores, "Id", "Nome"))'></select>

    <br/>
    <label asp-for="PrecoDeCustoString">Preco de Custo</label>
    <input type="text" step="any" asp-for="PrecoDeCustoString" class="form-control" placeholder="2.25">
    <span asp-validation-for="PrecoDeCustoString"></span>

    <br/>
    <label asp-for="PrecoDeVendaString">Preco de Venda</label>
    <input type="text" step="any" asp-for="PrecoDeVendaString" class="form-control" placeholder="3.25">
    <span asp-validation-for="PrecoDeVendaString"></span>

    <br/>
    <label asp-for="Medicao">Medição</label>
    <select class="form-control" asp-for="Medicao">
        <option value="0">Litro</option>
        <option value="1">Kilo</option>
        <option value="2">Unidade</option>
    </select>

    <br/>
    <button class="btn btn-success">Cadastrar</button>
</form>
